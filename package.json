{
  "name": "zod-mod",
  "version": "0.0.0",
  "description": "ZodMod is an extension for Zod that allows you to dynamically modify validation schemas",
  "keywords": [
    "zod",
    "zod-modification",
    "modification",
    "zod-extension"
  ],
  "license": "MIT",
  "author": "Jan Szewczyk (Szum-Tech)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:ci": "eslint . -o eslint-results.sarif -f @microsoft/eslint-formatter-sarif",
    "lint:fix": "eslint . --fix",
    "lint:inspect": "npx @eslint/config-inspector@latest",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "vitest",
    "test:ci": "CI=true vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.0",
    "@jackfranklin/test-data-bot": "^2.1.0",
    "@szum-tech/eslint-config": "^2.1.5",
    "@szum-tech/prettier-config": "^1.4.1",
    "@szum-tech/semantic-release-config": "^2.2.2",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/ui": "^3.0.7",
    "eslint": "^9.21.0",
    "happy-dom": "^17.1.8",
    "lodash": "^4.17.21",
    "prettier": "^3.5.2",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "zod": "^3.24.0"
  }
}
